<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <CheckBox
        android:id="@+id/refri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="200dp"
        android:text="Refri"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/refriQntd"
        android:layout_width="73dp"
        android:layout_height="38dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:hint="Qntd"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/refri"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/refriVal"
        android:layout_width="73dp"
        android:layout_height="39dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="196dp"
        android:ems="10"
        android:hint="Valor"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/refriQntd"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/hamburguer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="248dp"
        android:text="Hamburguer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/hambQntd"
        android:layout_width="73dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="248dp"
        android:ems="10"
        android:hint="Qntd"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/hamburguer"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/hambVal"
        android:layout_width="73dp"
        android:layout_height="39dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="244dp"
        android:ems="10"
        android:hint="Valor"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/hambQntd"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/pizza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="52dp"
        android:text="Pizza"
        app:layout_constraintEnd_toStartOf="@+id/pizzaQntd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pizzaQntd"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="35dp"
        android:ems="10"
        android:hint="Qntd"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/pizzaVal"
        app:layout_constraintStart_toEndOf="@+id/pizza"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pizzaVal"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="71dp"
        android:ems="10"
        android:hint="Valor"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pizzaQntd"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="340dp"
        android:text="Calcular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>